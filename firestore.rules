rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 認証されたユーザーのみアクセス可能
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // 自分のメッセージかどうか
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // メッセージコレクションのルール
    match /messages/{messageId} {
      // 読み取り：認証されたユーザーのみ
      allow read: if isAuthenticated();
      
      // 作成：認証されたユーザーかつ、自分のIDをsenderIdとして送信
      allow create: if isAuthenticated() 
        && request.resource.data.senderId == request.auth.uid
        && request.resource.data.text is string
        && request.resource.data.text.size() <= 1000  // 空文字もOK（画像のみの場合）
        && request.resource.data.timestamp is timestamp
        && (
          // テキストメッセージの場合
          (request.resource.data.text.size() > 0 && !('imageUrl' in request.resource.data))
          ||
          // 画像メッセージの場合
          ('imageUrl' in request.resource.data && request.resource.data.imageUrl is string)
          ||
          // 混合メッセージの場合
          (request.resource.data.text.size() > 0 && 'imageUrl' in request.resource.data)
        );
      
      // 更新：既読機能のため、認証されたユーザーなら誰でも更新可能
      // ただし、readByフィールドのみ更新可能
      allow update: if isAuthenticated()
        && (
          // 既読の更新（自分のユーザーIDのみ更新可能）
          (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['readBy']))
          || 
          // 自分のメッセージの編集
          (isOwner(resource.data.senderId) && request.resource.data.senderId == resource.data.senderId)
        );
      
      // 削除：自分のメッセージのみ削除可能
      allow delete: if isAuthenticated() 
        && isOwner(resource.data.senderId);
    }
  }
}